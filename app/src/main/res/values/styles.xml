<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnBackground">@color/bgMain</item>
        <item name="android:textColorPrimary">@color/textMain</item>
        <item name="android:colorBackground">@color/bgMain</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/bgMain</item>
        <item name="android:textAppearance">@style/AppTheme.TextView</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="cardViewStyle">@style/AppTheme.CardView</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardView</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorControlActivated">@color/textSubtitle</item>
        <item name="colorControlHighlight">@color/rippleColor</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">@dimen/corner_default</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="cardBackgroundColor">@color/colorWhite</item>
        <item name="contentPadding">@dimen/baseline_grid</item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textMain</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/textSubtitle</item>
    </style>
</resources>
